# Caddyfile untuk WhatsApp MCP Server

wa-mcp.example.com {
    # IP Whitelist - hanya izinkan IP Client
    @allowed remote_ip <IP_CLIENT>
    
    handle @allowed {
        reverse_proxy whatsapp-mcp:8000 {
            flush_interval -1
        }
    }
    
    handle {
        respond "Forbidden" 403
    }
}
